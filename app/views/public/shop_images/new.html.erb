<h1>画像投稿フォーム</h1>

<% if @shop_image.errors.any? %>
  <%= @shop_image.errors.count %>件のエラーが発生しました
  <ul>
    <% @shop_image.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @shop_image, url: public_shop_images_path, method: :post do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>ショップ名</h4>
      <%= f.text_field :name %>
    <h4>説明</h4>
      <%= f.text_area :caption %>
    <%= f.submit '投稿' %>
  <% end %>
  