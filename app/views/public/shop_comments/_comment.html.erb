<p>コメント件数：<%= shop_image.shop_comments.count %></p>
  <% shop_image.shop_comments.each do |shop_comment| %>
    <%= shop_comment.customer.name %>
    <%= shop_comment.created_at.strftime('%Y/%m/%d') %><%= simple_format (shop_comment.comment) %>
    <% if shop_comment.customer == current_customer %>
      <%= link_to "削除", public_shop_image_shop_comment_path(shop_image_id: shop_comment.shop_image.id, shop_comment_id: shop_comment.id), method: :delete %>
    <% end %><br>
  <% end %>
