<% if shop_image.favorited_by?(current_customer) %>

    <%= link_to public_shop_image_favorite_path(shop_image), method: :delete, remote: true do %>
      ♥<%= shop_image.favorites.count %>いいね
    <% end %>

<% else %>

    <%= link_to public_shop_image_favorite_path(shop_image), method: :post, remote: true do %>
      ♡<%= shop_image.favorites.count %>いいね
    <% end %>

<% end %>
