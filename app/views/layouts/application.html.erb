<!DOCTYPE html>
<html>
  <head>
    <title>Shoppost</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
  </head>

  <body class = "d-flex flex-column vh-100">
    <header class = "shadow-sm">
      <nav class = "navbar navbar-expand-lg navbar-light">
        <div class = "container">
          <h2><%= link_to "ShopPost", root_path, class:"text-primary" %></h2>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
            <ul class = "navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li class = "nav-item"  type="button" >
                <%= link_to '投稿フォーム', new_public_shop_image_path, class:"btn btn-outline-primary" %>
              </li>
              <li class = "nav-item"  type="button" >
                <%= link_to '投稿一覧', public_shop_images_path, class:"btn btn-outline-primary" %>
              </li>
              <li class = "nav-item"  type="button" >
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-outline-primary" %>
              </li>
            <% elsif admin_signed_in? %>
              <li class = "nav-item"  type="button" >
                  <%= link_to '投稿一覧', public_shop_images_path, class:"btn btn-outline-primary" %>
              </li>
              <li class = "nav-item"  type="button" >
                  <%= link_to '会員一覧', public_customers_path, class:"btn btn-outline-primary" %>
              </li>
              <li>
                <%= button_to "ログアウト", destroy_admin_session_path, method: :delete , class:"btn btn-outline-primary" %>
              </li>
            <% else %>
              <li class = "nav-item"  type="button" >
                <%= link_to '投稿一覧', public_shop_images_path, class:"btn btn-outline-primary" %>
              </li>
              <li class = "nav-item" type="button" >
                <%= link_to "新規登録", new_customer_registration_path, class:"btn btn-outline-primary" %>
              </li>
              <li class = "nav-item"  type="button" >
                <%= link_to "ログイン", new_customer_session_path, class:"btn btn-outline-primary" %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class = "mb-auto">
    <%= yield %>
    </main>

    
  </body>
</html>
